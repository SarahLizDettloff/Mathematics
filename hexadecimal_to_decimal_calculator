def get_result(values):
    result = []
    results = []
    count = 0
    power = len(values) - 1
    sum = 0
    values = map(int, values)
    for value in values:
        result = (value * 16)
        base_16 = 16**power
        result = value * base_16
        results.append(result)
        power -= 1
    for result in results:
        sum += result
    print sum
    another()

def another():
    answer = raw_input("Is there another hexadecimal you want to convert?\n")
    if answer == "Y":
        get_hexadecimal()
    elif answer == "N":
        exit()
    else:
        print ("Enter Y to enter another hexadecimal or N to exit.")
        another()


def get_hexadecimal():
    hexdecimal = raw_input("What hexdecimal do you want to convert?\n")
    values = []
    for letter in hexdecimal:
        if letter == "A":
            values.append(10)
        elif letter == "B":
            values.append(11)
        elif letter == "C":
            values.append(12)
        elif letter == "D":
            values.append(13)
        elif letter == "E":
            values.append(14)
        elif letter == "F":
            values.append(15)
        elif letter == "1":
            values.append(1)
        elif letter == "2":
            values.append(2)
        elif letter == "3":
            values.append(3)
        elif letter == "4":
            values.append(4)
        elif letter == "5":
            values.append(5)
        elif letter == "6":
            values.append(6)
        elif letter == "7":
            values.append(7)
        elif letter == "8":
            values.append(8)
        elif letter == "9":
            values.append(9)
        else:
            print ("please enter values only including the following:\n0123456789ABCDEF")
    values = map(int, values)
    get_result(values)          


if __name__=="__main__":
    get_hexadecimal()
